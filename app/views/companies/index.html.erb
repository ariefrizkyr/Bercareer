<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <%= search_form_for @search, url: search_companies_path, method: :post do |f| %>
      <%= f.search_field :company_name_cont, placeholder: 'Company Name' %><br>
      <%= f.select :profile_city_cont, city, { include_blank: 'City' }, class: 'selection form-control' %><br>
      <%= f.select :profile_province_cont, province, { include_blank: 'Province' }, class: 'selection form-control' %><br>
      <%= f.submit 'Search' %>
    <% end %>
  </div>
</div>

<hr>

<div class="row">
  <% @companies.each do |company| %>
    <% if company.profile %>
      <%= link_to company do %>
        <%= company.company_name %><br>
      <% end %>
    <% end %>
  <% end %>
</div>
