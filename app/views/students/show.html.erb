<div class="row">
  <div class="col-md-4">
    <%= image_tag @student.resume.photo.url(:medium), class: 'img-circle' %><br>
    Name : <%= @student.full_name %><br>
    Gender : <%= @student.resume.gender %><br>
    Date of Birth : <%= @student.resume.birth_date.strftime("%B %d, %Y") %><br>
    Address : <%= @student.resume.address %><br>
    City : <%= @student.resume.city %><br>
    Province : <%= @student.resume.province %><br>
    Country : <%= @student.resume.country %><br>
    Postal Code : <%= @student.resume.postal_code %>
  </div>

  <div class="col-md-4">
    University : <%= @student.resume.university %><br>
    Major : <%= @student.resume.major %><br>
    Level : <%= @student.resume.level %><br>
    Graduation Year (Expected) : <%= @student.resume.grad_year.strftime("%Y") %><br>
    GPA/IPK : <%= @student.resume.gpa %><br>
    Skills : <%= @student.resume.skill_list %><br>
    Languages : <%= @student.resume.language_list %>
  </div>

  <div class="col-md-4">
    Experiences :<br>
    <ul>
      <% @student.resume.experiences.each do |exp| %>
        <li>Company Name: <%= exp.company_name %></li>
        <li>Position: <%= exp.position %></li>
        <li>Time Period: <%= exp.start_work.strftime("%B %Y") %> -
        <% if exp.is_current == true %>
           Currently Working here
        <% else %>
          <%= exp.end_work.strftime("%B %Y") %>
        <% end %></li>
        <li>Description: <br><%= exp.description %></li>
      <% end %>
    </ul>
    Feedbacks :<br>
    <div class="average-feedback-rating" data-score="<%= @average_feedback %>"></div>
    <span>Based on <%= @student.feedbacks.count %> feedbacks</span>
    <hr>
    <%= render @student.feedbacks %><br>
    Portfolios :<br>
    <ul>
      <% @student.resume.portfolios.each do |port| %>
        <li>Title: <%= port.title %></li>
        <li>Description: <%= port.description %></li>
        <li>Link: <%= port.link %></li>
      <% end %>
    </ul>
    Facebook : <%= @student.resume.facebook_url %><br>
    Twitter : <%= @student.resume.twitter_url %><br>
    LinkedIn : <%= @student.resume.linkedin_url %><br>
    Google+ : <%= @student.resume.googleplus_url %><br>
  </div>
</div>
<% if current_company %>
  <div class="row text-center">
    <%= link_to 'Send message', new_message_path(to: @student.id), class: 'btn btn-default' %>

    <% if @student.jobs %>
      <p>This student is applying for:</p>
      <%= render 'accepts/form' %>
    <% end %>

    <% if @student.accepts %>
      <%= link_to 'Give feedback', new_student_feedback_path(@student) unless Feedback.where(company_id: current_company.id, student_id: @student.id).count > 0 %>
    <% end %>
    <br><br>
  </div>
<% end %>
<% if current_student %>
  <% if @resume.student_id == current_student.id %>
    <div class="row text-center">
      <%= link_to 'Edit Resume', edit_student_resume_path(current_student), class: 'btn btn-primary' %>
      <%= link_to 'Back', root_path, class: 'btn btn-success' %>
    </div>
  <% else %>
    <div class="row text-center">
      <%= link_to 'Back', root_path, class: 'btn btn-success' %>
    </div>
  <% end %>
<% end %>

<script>
  $('.feedback-rating').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>

<script>
  $('.average-feedback-rating').raty({
    readOnly: true,
    path: '/assets/',
    score: function() {
      return $(this).attr('data-score')
    }
  });
</script>
