<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
  <% unless current_page?(company_home_path) || current_page?(new_company_session_path) || current_page?(new_company_registration_path) || current_company %>
    <%= render 'layouts/studentnavbar' %>
  <% else %>
    <%= render 'layouts/companynavbar' %>
  <% end %>

  <div class="container">
    <%= render 'layouts/messages' %>
    <%= yield %>
  </div>
</body>
<%= render 'layouts/scripts' %>
</html>
