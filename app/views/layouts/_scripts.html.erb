<script>
  $(document).ready(function() {
    // GPA slider
    $("#gpa-slider").change(function () {
       var newValue = $('#gpa-slider').val();
       $("#value").html(newValue);
    });
    // selection
    $('.selection').each(function() {
      $(this).select2({
      });
    });
    // taggable
    $('.taggable').each(function() {
     $(this).select2({
       tags: [],
       tokenSeparators: [','],
       placeholder: 'Separated by comma'
     });
    });
    // job is paid
    $(".paid").click(function() {
      var isPaid = $(this).prop("checked");
      if (isPaid == true) {
        $(".salary").prop("disabled", false);
      }
      else {
        $(".salary").prop("disabled", "disabled");
      }
    });
    // job is flexible work period
    $(".flex-end-work").click(function() {
      var isFlex = $(this).prop("checked");
      if (isFlex == false) {
        $(".end-work").prop("disabled", false);
      }
      else {
        $(".end-work").prop("disabled", "disabled");
      }
    });
  });
</script>
