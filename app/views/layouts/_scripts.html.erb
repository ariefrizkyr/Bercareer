<script>
  $(document).ready(function() {
    // selection
    $('.selection').each(function() {
      $(this).select2({
        theme: 'bootstrap'
      });
    });
    // taggable
    $('.taggable').each(function() {
     $(this).select2({
       tags: [],
       tokenSeparators: [','],
       theme: 'bootstrap',
       placeholder: 'Separated by comma'
     });
    });
    // job is paid
    $(".paid").click(function() {
      var isPaid = $(this).prop("checked");
      if (isPaid == true) {
        $(".salary").prop("disabled", false);
      }
      else {
        $(".salary").prop("disabled", "disabled");
      }
    });
  });
</script>
