<%= simple_form_for(@profile, url: company_profile_path, html: { multipart: true }) do |f| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h3>Company Information</h3>

      <div class="form-inputs">
        <%= f.input :logo %>
      </div>

      <div class="form-inputs">
        <%= f.input :address %>
      </div>

      <div class="form-inputs">
        <%= f.input :city, collection: city, input_html: { class: 'selection' } %>
      </div>

      <div class="form-inputs">
        <%= f.input :province, collection: province, input_html: { class: 'selection' } %>
      </div>

      <div class="form-inputs">
        <%= f.input :country, collection: ["Indonesia"] %>
      </div>

      <div class="form-inputs">
        <%= f.input :website %>
      </div>

      <div class="form-inputs">
        <%= f.input :field, collection: field, input_html: { class: 'selection' } %>
      </div>

      <div class="form-inputs">
        <%= f.input :description %>
      </div>

      <div class="actions text-center">
        <%= f.button :submit, class: 'btn btn-primary' %>
      </div>

      </div>
    </div>
  </div>
<% end %>
