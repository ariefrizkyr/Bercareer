<div class="nested-fields">
  <div class="row">
    <div class="col-sm-12">
      <%= f.input :title, input_html: { class: 'form-control' } %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <%= f.input :description, input_html: { rows: 4, class: 'form-control' } %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <%= f.input :link, label: 'Portfolio URL', input_html: { class: 'form-control' } %>
    </div>
  </div>

  <%= link_to_remove_association 'Remove', f, class: 'form-button btn btn-red' %>
</div>

<hr>
