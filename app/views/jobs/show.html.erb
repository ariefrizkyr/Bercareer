<%= @job.job_title %> at <%= @job.company.company_name %><br>
<%= @job.job_type %><br>
<%= @job.start_period.strftime("%B %Y") %> - <%= @job.start_period.strftime("%B %Y") %><br>
<%= @job.short_desc %><br>
<%= @job.job_desc %><br>
<%= @job.requirement %><br>
<% if @job.is_paid == true %>
  Paid<br>
  IDR<%= @job.salary %> <%= @job.salary_interval %><br>
<% else %>
  No paid<br>
<% end %>
<%= @job.difficulties %><br>
<%= @job.urgency %><br>
<%= @job.address %><br>
<%= @job.city %><br>
<%= @job.province %><br>
<%= @job.country %><br>
<%= @job.start_work.strftime("%H:%M") %> - <%= @job.end_work.strftime("%H:%M") %><br>
<%= @job.deadline.strftime("%d %B %Y at %H:%M") %><br>
<%= @job.main_category %> <%= @job.second_category %><br><br>
<% if current_student %>
  <% unless Apply.where(student_id: current_student.id, job_id: @job.id).count > 0 %>
    <% if @job.deadline > Time.now || @job.active = false %>
      <%= render 'applies/form' %>
    <% else %>
      Application closed.
    <% end %>
  <% else %>
    You have applied to this job.
  <% end %>
<% end %>

<% if current_company %>
  <% if @job.company_id == current_company.id %>
    <%= link_to 'Edit Job', edit_job_path, class: 'btn btn-primary' %>
  <% end %>
<% end %>
