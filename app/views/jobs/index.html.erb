<div class="container-fluid white-background padding-top padding-bottom margin-bottom">
  <div class="container">
    <%= search_form_for @search, url: search_jobs_path, html: { method: :post } do |f| %>
      <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <%= f.search_field :job_title_cont, placeholder: 'Job Title (Accountant, Programmer, etc)', class: 'form-control' %>
            </div>
          </div>

          <div class="col-md-4">
            <div class="form-group">
              <%= f.select :job_type_cont, ["Full Time", "Part Time", "Freelance", "Internship"], { include_blank: 'Job Type' }, class: 'form-control' %>
            </div>
          </div>

          <div class="col-md-4">
            <div class="form-group">
              <%= f.select :province_cont, province, { include_blank: 'Location' }, class: 'selection form-control' %>
            </div>
          </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-md-offset-4 text-center">
          <%= f.submit 'Search Job', class: 'btn btn-lg btn-green' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @jobs.each do |job| %>
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading text-center">
            <%= image_tag job.company.profile.logo.url(:medium) %>
            <h4><%= job.job_title %></h4>
            <h5><%= job.company.company_name %></h5>
          </div>

          <div class="panel-body">
            <div class="col-sm-4 text-center">
            <label class="label label-<%= job.job_type.delete(' ').downcase %>"><%= job.job_type %></label>
            </div>

            <div class="col-sm-4 text-center">
              <label class="label label-<%= job.urgency.delete(' ').downcase %>"><%= job.urgency %></label>
            </div>

            <div class="col-sm-4 text-center">
              <% if job.is_paid == true %>
                <label class="label label-green">Paid</label>
              <% else %>
                <label class="label label-blue">No paid</label>
              <% end %>
            </div>

            <div class="medium-gap"></div>

            <div class="col-sm-12">
              <p class="small text-center"><strong><%= job.city %>, <%= job.province %></strong></p>
              <p class="small"><strong>Working period:</strong> <%= job.start_period.strftime("%B %Y") %> - <%= job.start_period.strftime("%B %Y") %></p>
              <p class="small"><strong>Dificulties:</strong> <%= job.difficulties %> Application</p>
              <p class="small"><strong>Deadline:</strong> <%= job.deadline.strftime("%d %B %Y at %H:%M") %></p>
              <%= link_to 'Job Details', job, class: 'btn btn-block btn-green' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
