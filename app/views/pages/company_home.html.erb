<% provide(:title, "Company") %>

<div class="row">
  <div class="col-lg-12 text-center">
    <h1>Bercareer Company Index</h1>
    <p class="lead">This is the temp company homepage</p>
    <% if current_company %>
      <% if current_company.profile %>
        <%= link_to 'Edit Profile', edit_company_profile_path(current_company), class: 'btn btn-primary' %>
      <% else %>
        <%= link_to 'Create Profile', new_company_profile_path(current_company), class: 'btn btn-primary' %>
      <% end %>
      <%= link_to 'View Companies', companies_path, class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
